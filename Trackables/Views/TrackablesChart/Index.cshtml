@using Trackables.Models

@{
    ViewBag.Title = "Trackables Chart ";
    Layout = "~/Views/Shared/_TrackablesLayout.cshtml";
}

<script src="~/Scripts/Highcharts-4.0.1/js/highcharts.js"></script>

@using (Html.BeginForm("Index", "Charts", FormMethod.Post, new { id = "TheForm" }))
{
    <br />

    <div class="row">
        <div class='col-md-12'>
            <div class="form-inline">
                <input type='text' class="form-control date" id='fromdate' name="fromDate" />
                <input type='text' class="form-control date" id='todate' name="toDate" />
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-2">
            @{Html.RenderPartial("TrackablesList", new TrackablesViewModel());}
        </div>
        <div class="col-md-2">
            @{Html.RenderPartial("MacronutrientsList", new MacronutrientsViewModel());}
        </div>
    </div>

    <div id="trackablesChart" class="trackables-chart"></div>

    <p><button id="GenerateChartButton" type="submit" class="btn btn-success">Generate Chart</button></p>
}

<script src="@Url.Content("~/Scripts/trackables-common.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/trackables-trackableschart.js")" type="text/javascript"></script>

