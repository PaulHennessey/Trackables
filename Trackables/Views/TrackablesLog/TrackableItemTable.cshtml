@model  Trackables.Models.TrackableItemListViewModel
@using Trackables.Models


<table id="trackableItemTable" class="table table-hover">
    <thead>
    </thead>
    <tbody>
        @foreach (var trackableItem in Model.TrackableItems)
        {
            <tr>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => trackableItem.Name)
                </td>
                <td class="col-md-1">
                    <input class="form-control input-sm" id=@trackableItem.TrackableId type='text' value=@trackableItem.Quantity>
                </td>
                <td class="col-md-1">
                    @Html.ActionLink("Save", "Save", null, new { @class = "SaveLink", @data_id = trackableItem.Id, @data_trackableid = trackableItem.TrackableId })
                </td>
            </tr>
        }
    </tbody>
</table>



