@model  Trackables.Models.TrackablesViewModel
@using Trackables.Models

<table id="trackablesTable" class="table table-hover">
    <thead>
    </thead>
    <tbody>
        @foreach (var trackable in Model.Trackables)
        {
            <tr>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => trackable.Name)
                </td>
                <td class="col-md-1">
                    <a href="@Url.RouteUrl("EditTrackable", new { id = trackable.Id })">Edit</a>
                    @Html.ActionLink("Delete", "Delete", null, new { @class = "DeleteTrackableLink", @data_trackableid = trackable.Id })
                </td>
            </tr>
        }
    </tbody>
</table>