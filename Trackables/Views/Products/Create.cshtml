@model  Trackables.Models.ProductViewModel
@using Trackables.Domain

@{
    ViewBag.Title = "Create Product";
    Layout = "~/Views/Shared/_TrackablesLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            @foreach (string key in Model.MacroNutrients.Keys)
            {
                <div class="form-group">
                    @Html.Label(key)
                    @Html.EditorFor(model => model.MacroNutrients[key], new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MacroNutrients[key])
                </div>
            }

            <p><button type="submit" class="btn btn-primary">Create</button></p>

            <div><a href="@Url.RouteUrl("Products")">Back to List</a></div>
        </div>

        <div class="col-md-6">
            @foreach (string key in Model.MicroNutrients.Keys)
            {
                <div class="form-group">
                    @Html.Label(key)
                    @Html.EditorFor(model => model.MicroNutrients[key], new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MicroNutrients[key])
                </div>
            }
        </div>
    </div>  
}

<script src="@Url.Content("~/Scripts/trackables-products.js")" type="text/javascript"></script>
