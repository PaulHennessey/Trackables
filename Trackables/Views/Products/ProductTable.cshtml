@model  Trackables.Models.ProductsViewModel
@using Trackables.Models

<table id="productTable" class="table table-hover">
    <thead>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => product.Name)
                </td>
                <td class="col-md-1">
                    <a href="@Url.RouteUrl("EditProduct", new { code = product.Code })">Edit</a>
                    @Html.ActionLink("Delete", "Delete", null, new { @class = "DeleteLink", @data_code = product.Code })
                </td>
            </tr>
        }
    </tbody>
</table>
