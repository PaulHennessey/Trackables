@model  Trackables.Models.FoodItemTableViewModel
@using Trackables.Models


<table id="foodItemTable" class="table table-hover">
    <thead>
    </thead>
    <tbody>
        @foreach (var foodItem in Model.FoodItems)
        {
            <tr>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => foodItem.Name)
                </td>
                <td class="col-md-1">
                   <input class="form-control input-sm" id=@foodItem.Id name=@foodItem.Quantity type='text' value=@foodItem.Quantity>
                </td>
                <td class="col-md-1">
                    @Html.ActionLink("Save", "Save", null, new { @class = "SaveLink", @data_id = foodItem.Id })
                    @Html.ActionLink("Delete", "Delete", null, new { @class = "DeleteLink", @data_id = foodItem.Id })
                </td>
            </tr>
        }
    </tbody>
</table>



