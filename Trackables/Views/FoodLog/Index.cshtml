@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="row">
        <div class='col-md-12'>
            <div class="form-group">
                <input type='text' class="form-control" id='datetimepicker' />
            </div>
        </div>
    </div>

    <div id="fetch">
        <input class="no-clear typeahead form-control" type="text" placeholder="Products">
    </div>

    <br />

    <div class="row">
        <div class="col-md-12">
            <table id="foodItemTable" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th class="col-md-4">Food product</th>
                        <th class="col-md-4">Quantity</th>
                        <th class="col-md-4">Links</th>
                    </tr>
                </thead>
                <tbody id="foodItemTableBody">
                    @foreach (var foodItem in Model.FoodItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => foodItem.Name)
                            </td>
                            <td>
                                <input class='input-quantity' id=@foodItem.Id name=@foodItem.Quantity type='text' value=@foodItem.Quantity>
                            </td>
                            <td>
                                @*@Html.ActionLink("Save", "SaveIngredient", new { id = foodItem.Id, mealId = Model.Id }, new { @class = "SaveIngredientLink" })
                                    @Html.ActionLink("Delete", "DeleteIngredient", new { id = foodItem.Id, mealId = Model.Id }, new { @class = "DeleteIngredientLink" })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

